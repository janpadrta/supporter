<h1>Users</h1>

<%= link_to 'New User', new_user_path %>

<%= search_form_for @q do |f| %>
  <table class="pure-table">
    <thead>
      <tr>
        <td><%= f.label :name_cont %></td>
        <td><%= f.search_field :name_cont %></td>
        <td><%= f.submit 'Najdi', class: "contact sendButton" %></td>
      </tr>
    </thead>
    <thead>
      <tr>
        <th>id <%= sort_link(@q, :id) %></th>
        <th>Name <%= sort_link(@q, :name) %></th>
        <th>Admin</th>
        <th>Technical</th>
        <th>Team Leader</th>
        <th>Approver</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, i| %>
        <tr class="<%= 'pure-table-odd' if i % 2 == 0 %>">
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= yes_no user.admin %></td>
          <td><%= yes_no user.technical %></td>
          <td><%= yes_no user.team_leader %></td>
          <td><%= yes_no user.approver %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
